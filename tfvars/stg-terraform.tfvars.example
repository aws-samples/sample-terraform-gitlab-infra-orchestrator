# Staging Environment Configuration
# Smart Terraform Orchestrator - Multi-Account AWS Infrastructure

# Project configuration
project_name = "smart-terraform-orchestrator"
gitlab_host  = "gitlab.company.com"
gitlab_org   = "infrastructure-team"

# Base modules configuration
base_modules = {
  ec2 = {
    repository = "ec2-base-module"
    version    = "main"
  }
  alb = {
    repository = "tf-alb"
    version    = "main"
  }
}

# Primary module for this deployment
primary_module = "ec2"

# AWS configuration
account_id            = "STAGING_ACCOUNT_ID"
org_master_account_id = "ORG_MASTER_ACCOUNT_ID"
aws_region            = "us-east-1"
environment           = "staging"

# ALB Configuration - Scaled for staging environment
alb_spec = {
  linux-alb = {
    vpc_name             = "staging-vpc"
    http_enabled         = true
    https_enabled        = false
    name                 = "linux-alb"
    health_check_path    = "/health"
    health_check_matcher = "200"
  },
  windows-alb = {
    vpc_name             = "staging-vpc"
    http_enabled         = true
    https_enabled        = false
    name                 = "windows-alb"
    health_check_path    = "/health"
    health_check_matcher = "200"
  }
}

# EC2 Configuration - Scaled up for staging
ec2_spec = {
  # Linux Web Server - Staging Scale
  "linux-webserver" = {
    # Same ALB integration pattern
    enable_alb_integration = true
    alb_name               = "linux-alb"
    
    # Scaled up for staging
    instance_type          = "t3.medium"
    vpc_name               = "staging-vpc"
    key_name               = "staging-keypair"
    os_type                = "linux"
    ami_name               = "amzn2-ami-hvm-*-x86_64-gp2"
    root_volume_size       = 30

    # Staging security rules - public web access
    ingress_rules = [
      {
        from_port   = 22
        to_port     = 22
        protocol    = "tcp"
        cidr_blocks = ["{STAGING_VPC_CIDR}"]
        description = "SSH access from staging VPC"
      },
      {
        from_port   = 80
        to_port     = 80
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
        description = "HTTP access from internet (ALB)"
      },
      {
        from_port   = 443
        to_port     = 443
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
        description = "HTTPS access from internet (ALB)"
      }
    ]

    # Increased storage for staging
    additional_ebs_volumes = [
      {
        device_name = "/dev/sdf"
        size        = 100
        type        = "gp3"
        encrypted   = true
      }
    ]
    
    subnet_name = "staging-private-subnet-1"

    tags = {
      Application = "WebServer"
      OS          = "Linux"
      Tier        = "Web"
    }
  },

  # Linux Application Server - Staging Scale
  "linux-appserver" = {
    instance_type    = "t3.large"
    vpc_name         = "staging-vpc"
    key_name         = "staging-keypair"
    os_type          = "linux"
    ami_name         = "amzn2-ami-hvm-*-x86_64-gp2"
    root_volume_size = 50

    ingress_rules = [
      {
        from_port   = 22
        to_port     = 22
        protocol    = "tcp"
        cidr_blocks = ["{STAGING_VPC_CIDR}"]
        description = "SSH access from staging VPC"
      },
      {
        from_port   = 8080
        to_port     = 8080
        protocol    = "tcp"
        cidr_blocks = ["{STAGING_VPC_CIDR}"]
        description = "Application port from staging VPC"
      }
    ]

    additional_ebs_volumes = [
      {
        device_name = "/dev/sdg"
        size        = 200
        type        = "gp3"
        encrypted   = true
      }
    ]
    
    subnet_name = "staging-private-subnet-2"

    tags = {
      Application = "AppServer"
      OS          = "Linux"
      Tier        = "Application"
    }
  },

  # Windows Web Server - Staging Scale
  "windows-webserver" = {
    # Same ALB integration pattern
    enable_alb_integration = true
    alb_name               = "windows-alb"
    
    # Scaled up for staging
    instance_type          = "t3.large"
    vpc_name               = "staging-vpc"
    key_name               = "staging-keypair"
    os_type                = "windows"
    ami_name               = "Windows_Server-2022-English-Full-Base-*"
    root_volume_size       = 80

    # Windows security rules - public web access, restricted RDP
    ingress_rules = [
      {
        from_port   = 3389
        to_port     = 3389
        protocol    = "tcp"
        cidr_blocks = ["{STAGING_MGMT_CIDR}"]
        description = "RDP access from management subnet only"
      },
      {
        from_port   = 80
        to_port     = 80
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
        description = "HTTP access from internet (ALB)"
      },
      {
        from_port   = 443
        to_port     = 443
        protocol    = "tcp"
        cidr_blocks = ["0.0.0.0/0"]
        description = "HTTPS access from internet (ALB)"
      }
    ]

    # Increased storage for staging
    additional_ebs_volumes = [
      {
        device_name = "/dev/sdf"
        size        = 200
        type        = "gp3"
        encrypted   = true
      }
    ]
    
    subnet_name = "staging-private-subnet-1"

    tags = {
      Application = "WebServer"
      OS          = "Windows2022"
      Tier        = "Web"
    }
  }
}
# Common tags for all resources
common_tags = {
  Owner       = "infrastructure-team"
  Environment = "staging"
  Project     = "smart-terraform-orchestrator"
  CostCenter  = "engineering"
}